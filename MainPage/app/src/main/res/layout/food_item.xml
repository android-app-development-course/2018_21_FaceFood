<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/food_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/food_image"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/light_blue_no_image"
            android:contentDescription="Nothing"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/vertical_padding"
            android:layout_marginStart="@dimen/vertical_padding"
            android:layout_toEndOf="@id/food_image"
            android:layout_toRightOf="@id/food_image"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_name"
                style="@style/news_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                tools:text="food name"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/food_place"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                tools:text="food place"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/food_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                tools:text="food time"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/eat"/>

                    <TextView
                        android:id="@+id/food_up"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/nauseated"/>

                    <TextView
                        android:id="@+id/food_down"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

